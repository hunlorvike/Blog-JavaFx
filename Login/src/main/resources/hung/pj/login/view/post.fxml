<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="dashboardAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hung.pj.login.controller.PostController">

    <BorderPane layoutY="14.0" prefHeight="720.0" prefWidth="1915.0">
        <left>
            <fx:include fx:id="menuLeft" source="menu.fxml" />
        </left>
        <center>
            <Pane prefHeight="720.0" prefWidth="1060.0" style="-fx-background-color: #F5EFE6" BorderPane.alignment="CENTER">
                <!--Toolbar-->
                <fx:include fx:id="toolbar" source="toolbar.fxml" />

                <!--Button action-->

                <Button fx:id="addPostButton" layoutX="30.0" layoutY="100.0" mnemonicParsing="false" prefHeight="20.0" prefWidth="80.0"
                        styleClass="b, button-green"  stylesheets="@../style/style.css" onAction="#handleAddPost" text="Add_Post" textFill="white" />
                <!--Table post-->
                <TableView fx:id="tableView" layoutX="30.0" layoutY="142.0" prefHeight="500.0" prefWidth="1000.0" stylesheets="@../style/style.css">
                    <!-- Các cột của TableView -->
                    <columns>
                        <TableColumn fx:id="idColumn" minWidth="100.0" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="titleColumn" minWidth="200.0" prefWidth="250.0" text="Title" />
                        <TableColumn fx:id="statusColumn" minWidth="150.0" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="viewColumn" minWidth="150.0" prefWidth="150.0" text="View_count" />
                        <TableColumn fx:id="creatorColumn" minWidth="150.0" prefWidth="150.0" text="Creator" />
                        <TableColumn fx:id="createColumn" minWidth="80.0" prefWidth="200.0" text="Create At" />
                        <TableColumn fx:id="updateColumn" minWidth="80.0" prefWidth="200.0" text="Update At" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </Pane>
        </center>
    </BorderPane>

</AnchorPane>
