                <Pane prefHeight="600.0" prefWidth="292.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fitHeight="600.0" fitWidth="295.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../image/7.jpg"/>
                            </image>
