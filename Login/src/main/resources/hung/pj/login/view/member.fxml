<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="dashboardAnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hung.pj.login.controller.MemberController">
    <BorderPane prefHeight="720.0" prefWidth="1600.0">
        <left>
            <fx:include fx:id="menuLeft" source="menu.fxml" />
        </left>
        <center>
            <Pane prefHeight="720.0" prefWidth="1060.0" style="-fx-background-color: #F5EFE6" BorderPane.alignment="CENTER">
                <!--Toolbar-->
                <fx:include fx:id="toolbar" source="toolbar.fxml" />

                <!--Button action-->

                <Button fx:id="allButton" layoutX="30.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleAllButtonClicked" prefHeight="20.0" prefWidth="80.0" styleClass="b, button-green" stylesheets="@../style/style.css" text="All" textFill="white" />
                <Button fx:id="superAdminButton" layoutX="130.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleRoleButtonClicked" prefHeight="20.0" prefWidth="80.0" styleClass="b, button-green" stylesheets="@../style/style.css" text="Super Admin" textFill="white" />
                <Button fx:id="adminButton" layoutX="230.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleRoleButtonClicked" prefHeight="20.0" prefWidth="80.0" styleClass="b, button-green" stylesheets="@../style/style.css" text="Admin" textFill="white" />
                <Button fx:id="moderatorButton" layoutX="330.0" layoutY="100.0" mnemonicParsing="false" onAction="#handleRoleButtonClicked" prefHeight="20.0" prefWidth="80.0" styleClass="b, button-green" stylesheets="@../style/style.css" text="Moderator" textFill="white" />
                <!--Table member-->
                <TableView fx:id="tableView" layoutX="30.0" layoutY="142.0" prefHeight="500.0" prefWidth="1000.0" stylesheets="@../style/style.css">
                    <!-- Các cột của TableView -->
                    <columns>
                        <TableColumn fx:id="idColumn" minWidth="100.0" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="250.0" text="Fullname" />
                        <TableColumn fx:id="emailColumn" minWidth="150.0" prefWidth="150.0" text="Email" />
                        <TableColumn fx:id="roleColumn" minWidth="150.0" prefWidth="150.0" text="Role" />
                        <TableColumn fx:id="createColumn" minWidth="80.0" prefWidth="200.0" text="Create At" />
                        <TableColumn fx:id="updateColumn" minWidth="80.0" prefWidth="200.0" text="Update At" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

            </Pane>
        </center>
    </BorderPane>
</AnchorPane>
