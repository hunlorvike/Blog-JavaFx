<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="hung.pj.login.controller.MessengerController">
    <BorderPane prefHeight="720.0" prefWidth="1280.0">
        <left>
            <fx:include fx:id="menuLeft" source="menu.fxml"/>
        </left>
        <center>
            <Pane prefHeight="720.0" prefWidth="1060.0" style="-fx-background-color: white" styleClass="button-green"
                  BorderPane.alignment="CENTER">
                <Label layoutX="36.0" layoutY="25.0" styleClass="b, h5" text="All Message (10)"/>
                <ListView fx:id="conversationListView" layoutY="60.0" prefHeight="660.0" prefWidth="200.0"
                          style="-fx-border-radius: 0"/>
                <ScrollPane fx:id="messageScrollPane" fitToWidth="true" layoutX="200.0" layoutY="60.0"
                            prefHeight="610.0" prefWidth="860.0" stylesheets="@../style/style.css">
                    <VBox fx:id="messageVBox" prefHeight="660.0" prefWidth="860.0"/>
                </ScrollPane>
                <TextField fx:id="messageTextField" layoutX="200.0" layoutY="670.0" prefHeight="50.0" prefWidth="860.0"
                           promptText="Nhập tin nhắn"/>
                <Button onAction="#sendMessage" fx:id="sendMessage" layoutX="950.0" layoutY="683.0" mnemonicParsing="false" prefHeight="5.0"
                        prefWidth="100.0" styleClass="button-green" stylesheets="@../style/style.css" text="Send"/>
            </Pane>
        </center>
    </BorderPane>
</AnchorPane>
